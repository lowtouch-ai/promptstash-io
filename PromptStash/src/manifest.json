{
  "manifest_version": 3,
  "name": "PromptStash by lowtouch.ai",
  "version": "1.0.0",
  "description": "A Chrome extension to manage and deploy AI prompt templates.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://www.perplexity.ai/*",
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://grok.com/*",
        "https://www.perplexity.ai/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "styles.css",
        "sprite.svg",
        "defaultTemplates.mjs",
        "bootstrap.bundle.min.js",
        "icon48.png"
      ],
      "matches": [
        "https://grok.com/*",
        "https://www.perplexity.ai/*",
        "https://chatgpt.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}