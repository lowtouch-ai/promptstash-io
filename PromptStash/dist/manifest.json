{
  "manifest_version": 3,
  "name": "PromptStash by lowtouch.ai",
  "version": "1.0.0",
  "description": "A Chrome extension to manage and deploy AI prompt templates.",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.grok.com/*", "*://*.perplexity.ai/*", "*://*.chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}